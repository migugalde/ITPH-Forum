%h3 
    Hi
    = @name
    , let's make a new goal.

#goalSet
    = render partial: "goals_form"

%a#addNewStep{:href => "javascript:;"} Add a Step

    
:javascript
$(document).ready(function() {
    $("#addNewStep").on("click", function() {
        var count = $('div.stepForm').length - 1;
        if(count < 10)
            $("#new_steps_form").append($("#steps_form_hidden").html());
        else
            $("#addNewStep").text("Reached Max Steps");
            
        if(count == 9 || count == 10)
            $("#addNewStep").text("Reached Max Steps");
    });
  
    $("div#new_steps_form").on('click', '.removeNewStep', function() {
        var count = $('div.stepForm').length - 2;
        $(this).closest('.stepForm').remove();
        if(count < 10)
            $("#addNewStep").text("Add a Step");
        else
            $("#addNewStep").text("Reached Max Steps");
    });
  
  
});