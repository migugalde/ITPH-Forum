<html>
<head>
    <title>Welcome | Sign Up</title>
</head>

<body>
<div class="login-panel">
  <div class="row">
      <div class="small-12 columns"><h3>Sign Up</h3></div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if !(devise_error_messages!.empty?) %>
    <div class="callout alert">
      <%= devise_error_messages! %>
    </div>
  <%end%>
    
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: "First Name", required: "true", id: "firstName" %>
      </div>
    </div>
    
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: "Last Name", required: "true", id: "lastName" %>
      </div>
    </div>
  
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "email", required: "true", id: "Email" %>
      </div>
    </div>
    
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true, placeholder: "username", required: "true", id: "Username" %>
      </div>
    </div>
  
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "password", required: "true", id: "Password" %>
      </div>
    </div>
  
    <div class="row">
      <div class="large-12 columns right-align">
        <%= f.submit "Sign up", class: "button large" %>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <div class="large-12 columns">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  
  </div>
  </body>
  </html>
