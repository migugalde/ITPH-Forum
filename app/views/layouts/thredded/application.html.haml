      async: !Rails.application.config.assets.debug, |
      defer: true,                                   |
      'data-turbolinks-track': 'reload'              |
    != Gravatar.prefetch_dns
    %meta{:content => "width=device-width, initial-scale=1, user-scalable=no", :name => "viewport"}/
  %body
    :css
      .button {
          display: inline-block;
          vertical-align: middle;
          margin: 0 0 1rem 0;
          font-family: inherit;
          padding: 0.85em 1em;
          -webkit-appearance: none;
          border: 1px solid transparent;
          border-radius: 0;
          -webkit-transition: background-color 0.25s ease-out, color 0.25s ease-out;
          transition: background-color 0.25s ease-out, color 0.25s ease-out;
          font-size: 0.9rem;
          line-height: 1;
          text-align: center;
          cursor: pointer;
          background-color: #1779ba;
          color: #fefefe;
      }
      .menu.vertical > a > li {
        text-align: center;
        padding: 10%;
      }
    
      .menu.vertical > a > li > i {
        font-size: 3em;
        color: white;
      }
    
      .menu.vertical > a > li > label {
        color: white;
      }
    
      .position-left {
        width: 150px;
        transform: translateX(-150px);
      }
      .position-left {
        position: fixed;
        z-index: 12;
        top: 0;
        left: 0;
        width: 150px;
        height: 100%;
        overflow-y: auto;
        transition: transform 0.5s ease, -webkit-transform 0.5s ease;
        font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
        font-weight: normal;
        line-height: 1.5;
        color: #0a0a0a;
        -webkit-font-smoothing: antialiased;
        -webkit-box-shadow: inset -13px 0 20px -13px rgba(10, 10, 10, 0.25);
        box-shadow: inset -13px 0 20px -13px rgba(10, 10, 10, 0.25)
      }
      .off-canvas {
          background-color: lightskyblue;
      }
      .menu.vertical {
        -ms-flex-wrap: nowrap;
        flex-wrap: nowrap;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -ms-flex-direction: column;
        flex-direction: column;
        }
      .menu {
        padding: 0;
        margin: 0;
        list-style: none;
        position: relative;
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
      }
      .menu a, .menu .button {
            line-height: 1;
            text-decoration: none;
            white-space: nowrap;
            display: block;
            padding: 0.7rem 1rem;
        }
      .position-left.is-open ~ .off-canvas-content {
        transform: translateX(150px);
      }
      .thredded--main-container {
        max-width: 1200px;
      }

    #offCanvas.off-canvas.position-left{"data-off-canvas" => ""}
      / Your menu or Off-canvas content goes here
      %ul.menu.vertical
        %a{"href" => "/community"}
          %li
            %i.fa.fa-home{"aria-hidden" => "true"}
            %label Home 
        %a{"href" => main_app.thredded_path}
          %li
            %i.fa.fa-comments-o{"aria-hidden" => "true"}
            %label Forum
        %a{"href" => main_app.navbar_inbox_path}
          %li
            %i.fa.fa-inbox{"aria-hidden" => "true"}
            %label Inbox
        %a{"href" => main_app.navbar_profile_path}
          %li
            %i.fa.fa-user{"aria-hidden" => "true"}
            %label Profile
        %a{"href" => main_app.navbar_settings_path}
          %li
            %i.fa.fa-cogs{"aria-hidden" => "true"}
            %label Settings
    .off-canvas-content{"data-off-canvas-content" => ""}
      / Your page content lives here
      %button.button#openUp{"data-toggle" => "offCanvas", :onClick => "fun()"}
        %i.fa.fa-bars{"aria-hidden" => "true", :style => "font-size: 1.9em"}
      .row
        -if flash[:alert]
          %p.alert#red
            =flash[:alert]
      = yield
    :javascript
      //$(document).foundation();
      function fun() { 
        var content = document.getElementsByClassName("off-canvas-content")[0];
        var panel = document.getElementsByClassName("off-canvas")[0]
        if(content.style.transform == 'translateX(150px)') {
            content.style.transform = 'translateX(0px)';
            panel.style.transform = 'translateX(-150px)';
        }
        else {    
            content.style.transform = 'translateX(150px)';
            panel.style.transform = 'translateX(0px)';
            }
      }

