!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      Thredded | #{yield :thredded_page_title}
    %script{:src => "https://use.fontawesome.com/647f706861.js"}
    %link{"data-turbolinks-track" => "true", :href => "/assets/foundation.min.self-4b092450391598b88865b2b523f39c488eb305b018401c5cb09ace7b40ff7fd4.css?body=1", :media => "all", :rel => "stylesheet"}/
    %link{"data-turbolinks-track" => "true", :href => "/assets/foundation_and_overrides.self-3fd641ca2986769aeecdcf6dbf2d49ff4c480b39db3bb13246065a5578507058.css?body=1", :media => "all", :rel => "stylesheet"}/

    %script{"data-turbolinks-track" => "true", :src => "/assets/foundation.min.self-f0d295f00ec32bd9fcc029d00ceb720f4d88efd3bfa9473199461fae59110027.js?body=1"}
