- if !flash[:notice].blank?
  .alert.alert-info
    = flash[:notice]
.row#header
  .small-6.columns.margT
    %a.header-text resources
  -if current_user.admin?
    .small-6.columns.right-align.marB
      %a.header-icon{"href" => repages_new_path}
        %i.fa.fa-pencil-square-o{"aria-hidden" => "true"}
        upload
  %hr/

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Name
      %th Download Link
      %th
  %tbody
    - @repages.each do |res|
      %tr
        %td= res.name
        %td= link_to "Download File", res.attachment_url
        - if current_user.admin?
          %td= button_to "Delete", res, method: :delete, class: "btn btn-danger", id: "delta", data: { confirm: "Are you sure you want to delet #{res.name}?" }
